<h1>Analytics Dashboard</h1>

<canvas id="canvas" width=500 height=400></canvas>

<table>
  <tr>
    <td>
      Total visits:
    </td>
    <td>
      <%= Visitor.total_visits %>
    </td>
  </tr>

  <tr>
    <td>
      Unique visitors:
    </td>
    <td>
      <%= @unique_visitors %>
    </td>
  </tr>

  <tr>
    <td>
      New visitors:
    </td>
    <td>
      <%= @new_visitors %>
    </td>
  </tr>

  <tr>
    <td>
      Returning visitors:
    </td>
    <td>
      <%= @returning_visitors %>
    </td>
  </tr>

  <tr>
    <td>
      Firefox:
    </td>
    <td>
      <%= @firefox_users %>
    </td>
  </tr>

  <tr>
    <td>
      Chrome:
    </td>
    <td>
      <%= @chrome_users %>
    </td>
  </tr>

  <tr>
    <td>
      Safari:
    </td>
    <td>
      <%= @safari_users %>
    </td>
  </tr>

  <tr>
    <td>
      Internet Explorer:
    </td>
    <td>
      <%= @ie_users %>
    </td>
  </tr>

  <tr>
    <td>
      Total page views:
    </td>
    <td>
      <%= Visitor.total_pageviews %>
    </td>
  </tr>