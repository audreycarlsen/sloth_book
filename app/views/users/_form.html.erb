<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %> 
    </ul>
  <% end %>
  
  <p><%= label_tag :name %><br />
     <%= f.text_field :name, :size => 34 %></p>

  <p><%= label_tag :email %><br />
     <%= f.text_field :email, :size => 34 %></p>

  <p><%= label_tag :photo_url, 'Profile Picture URL' %><br />
     <%= f.text_field :photo_url, :size => 34 %></p>

  <p><%= label_tag :password %><br />
     <%= f.password_field :password, :size => 34 %></p>

  <p><%= label_tag :password_confirmation, 'Re-Enter Password'%><br />
     <%= f.password_field :password_confirmation, :size => 34 %></p>

  <p>
    <%= f.label 'Birthday' %><br>
    <%= select_month Date.today, {name: 'user[birth_month]'} %>
    <%= select_day Date.today, {name: 'user[birth_day]'} %>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year-100}, {name: 'user[birth_year]'} %>
  </p>

  <p>
    <%= f.radio_button :sex, "female" %>
    <%= f.label :sex, "Female"%>
    <%= f.radio_button :sex, "male" %>
    <%= f.label :sex, "Male"%>
  </p>

  <div class="actions">
    <%= f.submit("Onward, to glory!")%>
  </div>
<% end %>