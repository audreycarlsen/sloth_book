<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %> 
    </ul>
  <% end %>
  
  <!-- Add labels -->
  
  <p><%= f.text_field :name, placeholder: "Name", :size => 34 %></p>

  <p><%= f.text_field :email, placeholder: "Your Email", :size => 34 %></p>

  <p><%= f.text_field :photo_url, placeholder: "Profile Picture URL", :size => 34 %></p>

  <p><%= f.password_field :password, placeholder: "Password", :size => 34 %></p>

  <p><%= f.password_field :password_confirmation, placeholder: "Re-enter Password", :size => 34 %></p>

<!-- Make radio buttons work  -->
  <p>
    <%= f.radio_button :sex, "female" %>
    <%= f.label :sex, "Female"%>
    <%= f.radio_button :sex, "male" %>
    <%= f.label :sex, "Male"%>
  </p>

  <div class="actions">
    <%= f.submit("Onward, to glory!")%>
  </div>
<% end %>