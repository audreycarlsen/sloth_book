<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.text_field :first_name, placeholder: "First Name", :size => 15 %> <%= f.text_field :last_name, placeholder: "Last Name", :size => 15 %> 
  </div>

  <br>

  <div class="field">
    <%= f.text_field :email, placeholder: "Your Email", :size => 34 %>
  </div>

  <br>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", :size => 34 %>
  </div>

  <br>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Re-enter Password", :size => 34 %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit("Sign Up")%>
  </div>
<% end %>